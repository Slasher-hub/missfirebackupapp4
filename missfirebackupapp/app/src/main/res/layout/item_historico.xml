<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/historico_item_background"
    android:elevation="4dp">

    <!-- Ícone de status -->
    <ImageView
        android:id="@+id/iconStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_warning"
        android:contentDescription="@string/status"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        app:tint="@color/redAccent" />

    <!-- Conteúdo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Título do registro -->
        <TextView
            android:id="@+id/tvTituloRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título do Registro"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:singleLine="true" />

        <!-- Status (Concluído ou Pendente) -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendente"
            android:textSize="14sp"
            android:textColor="@color/redAccent"
            android:layout_marginTop="4dp" />

        <!-- Detalhes de investigação concluída -->
        <LinearLayout
            android:id="@+id/containerConclusao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:padding="8dp"
            android:background="@drawable/historico_item_background"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvCausa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="Causa:" />

            <TextView
                android:id="@+id/tvMedidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:text="Medidas:" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnSync"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/status"
        android:src="@drawable/ic_sync"
        app:tint="@color/white"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:contentDescription="Excluir"
        android:src="@drawable/ic_delete"
        app:tint="@color/redAccent"
        android:visibility="gone"/>
</LinearLayout>
