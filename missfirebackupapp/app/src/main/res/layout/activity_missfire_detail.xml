<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarMissfireDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redAccent"
        app:title="Missfire"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@android:color/white"
        app:contentInsetStartWithNavigation="0dp" />

    <LinearLayout
        android:id="@+id/contentRoot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:layout_marginTop="56dp">

        <!-- Dados iniciais (somente leitura) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_gray_button">

            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Data" />
            <TextView
                android:id="@+id/tvLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Local" />
            <TextView
                android:id="@+id/tvResponsavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Responsável" />
            <TextView
                android:id="@+id/tvItens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Itens" />
            <TextView
                android:id="@+id/tvDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Descrição" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Lista de updates -->
        <TextView
            android:id="@+id/tvTituloUpdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atualizações"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/containerUpdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Seção nova atualização -->
        <LinearLayout
            android:id="@+id/containerNovaAtualizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_gray_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova atualização"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição da atualização"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/fieldBackground"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTextoUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="6"
                    android:textColor="@android:color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddFotoUpdate"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOTO"
                    app:icon="@drawable/ic_camera"
                    app:iconGravity="textStart" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddArquivoUpdate"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARQUIVO"
                    app:icon="@drawable/ic_upload"
                    app:iconGravity="textStart"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerPreviewUpdateAnexos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>

    <!-- Barra de ações fixa -->
    <LinearLayout
        android:id="@+id/barraAcoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/rounded_gray_button">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalvarLocalUpdate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALVAR LOCAL"
            app:icon="@drawable/ic_save"
            app:iconGravity="textStart" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalvarCloudUpdate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALVAR NUVEM"
            app:icon="@drawable/ic_upload"
            app:iconGravity="textStart"
            android:layout_marginStart="12dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConcluirInvestigacao"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONCLUIR"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
