<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    tools:context=".MissFireActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Toolbar com botão de voltar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBarMissfire"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/registrar_missfire"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white"/>

        <!-- Espaçamento -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Campo: Data do Desmonte -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/fieldBackground"
            android:hint="@string/data_do_desmonte"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendar"
            app:endIconTint="@color/white"
            android:textColorHint="@color/gray"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textColor="@android:color/white"
                android:minHeight="48dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Espaçamento -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Campo: Descrição da Investigação -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descricao_da_investigacao"
            android:textColorHint="@color/gray"
            app:boxBackgroundColor="@color/fieldBackground"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minHeight="96dp"
                android:textColor="@android:color/white"
                android:textColorHint="#78909C" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Espaçamento -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Botões lado a lado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- Botão Salvar Local -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalvarLocalMissfire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/salvar_local"
                android:backgroundTint="#333333"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_save"
                android:minHeight="48dp"
                tools:ignore="VisualLintButtonSize" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Botão Upload -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadMissfire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fazer_upload"
                android:backgroundTint="#880000"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_upload"
                android:minHeight="48dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
