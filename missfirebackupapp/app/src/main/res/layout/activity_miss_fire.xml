<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MissFireActivity">

    <ScrollView
        android:id="@+id/scrollConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barAcoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBarMissfire"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/redAccent"
                app:title="@string/registrar_missfire"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Bloco Metadados (somente leitura quando carregando existente) -->
            <LinearLayout
                android:id="@+id/sectionMetadados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados iniciais"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:id="@+id/tvMetaData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Data da ocorrência -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data da ocorrência"
                app:hintTextAppearance="@style/TextAppearance.Missfire.Hint"
                app:boxBackgroundColor="@color/fieldBackground"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="@color/white"
                android:textColorHint="@color/gray"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDataOcorrencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="date"
                    android:textColor="@android:color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- Local (dropdown) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Local"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextAppearance.Missfire.Hint"
                app:boxBackgroundColor="@color/fieldBackground"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">
                <AutoCompleteTextView
                    android:id="@+id/inputLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:longClickable="false"
                    android:textColor="@android:color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- Responsável -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Responsável"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextAppearance.Missfire.Hint"
                app:boxBackgroundColor="@color/fieldBackground"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputResponsavel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- Itens encontrados -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Itens encontrados"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextAppearance.Missfire.Hint"
                app:boxBackgroundColor="@color/fieldBackground"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputItens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minHeight="72dp"
                    android:textColor="@android:color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- Descrição da ocorrência -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição da ocorrência"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextAppearance.Missfire.Hint"
                app:boxBackgroundColor="@color/fieldBackground"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minHeight="120dp"
                    android:textColor="@android:color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="match_parent" android:layout_height="16dp" />

            <!-- Pré-visualização anexos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvPreviewTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fotos (0/5)"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />
                <LinearLayout
                    android:id="@+id/containerPreviewAnexos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <Space android:layout_width="match_parent" android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior fixa -->
    <LinearLayout
        android:id="@+id/barAcoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="#1E1E1E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdicionarFotos"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adicionar fotos"
                android:textAllCaps="false"
                android:backgroundTint="@color/redAccent"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:iconGravity="textStart"
                app:cornerRadius="20dp"
                app:iconPadding="8dp"
                app:icon="@drawable/ic_camera"
                app:iconTint="@color/white" />
            <Space android:layout_width="12dp" android:layout_height="match_parent" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalvarLocalMissfire"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salvar local"
                android:textAllCaps="false"
                android:backgroundTint="@color/redAccent"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:icon="@drawable/ic_save"
                app:iconTint="@color/white"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
